import { Modal } from "./Modal/Modal";
import { SearchBar } from "./SearchBar/SearchBar";
import { ThemeSwithcer } from "./ThemeSwithcer/ThemeSwithcer";
---

<Logo />
<div class="headerContainer">
  <Modal client:visible>
    <SearchBar client:visible />
